<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="sales.order.info.links">
                <block class="Magento\Sales\Block\Order\Link" name="sales.order.attachment.info">
                    <arguments>
                        <argument name="key" xsi:type="string">attachment</argument>
                        <argument name="path" xsi:type="string">orderattachment/view/attachment</argument>
                        <argument name="label" xsi:type="helper" helper="Sp\Orderattachment\Helper\Data::getLabel"></argument>
                    </arguments>
                </block>
        </referenceBlock>
    </body>
</page>
